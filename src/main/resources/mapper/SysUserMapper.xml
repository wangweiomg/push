<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.honeywen.push.mapper.SysUserMapper">

    <resultMap id="BaseResultMap" type="com.honeywen.push.entity.SysUser">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="openid" property="openid" jdbcType="VARCHAR"/>
        <result column="isAdmin" property="isAdmin" jdbcType="VARCHAR"/>
        <result column="isForbidden" property="isForbidden" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="sysUserColumns">
        id,
        openid,
        isAdmin,
        isForbidden
    </sql>

    <select id="getAllUsers" resultMap="BaseResultMap">

        SELECT
          <include refid="sysUserColumns"/>
        FROM sys_users

    </select>
</mapper>